@using CocCachShop.Models;
@using PagedList.Mvc;
@model PagedList.IPagedList<tDanhMucSP>
@{
    ViewBag.Title = "KetQuaTimKiem";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@*@Html.PagedListPager(Model,)*@
<div id="pathchange" url="product/category" cid="68132" path="/quan-pc68132.html" icpp="12" page="1"></div>
<section class="bread-crumb clearfix">
    <span class="crumb-border"></span>
    <div class="container">
        <div class="row">
            <div class="col-xs-12 a-left">
                <ul class="breadcrumb">
                    <li class="home">
                        <a href="/"><span>Trang chủ</span></a>
                        <span class="mr_lr"><i class="fa fa-angle-right"></i> </span>
                    </li>
                    <li>
                        <strong><span itemprop="title"> Tìm kiếm</span></strong>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</section>
<div class="container margin-bottom-15 bg_white">
    <div class="wrp_border_collection">
        <div class="row">
            <section class="main_container collection collection_container col-lg-9 col-md-9 col-sm-12 col-lg-push-3 col-md-push-3">
                <div class="page_title margin-top-5">
                    <h1 class="title_page_h1"> @ViewBag.ThongBao</h1>
                </div>
                <div class="category-products products">
                    <div class="sortPagiBar">
                        <div class="srt">
                            <div class="wr_sort col-sm-12">
                                <div class="text-sm-right">
                                    <div class="sortPagiBar sortpage text-sm-right">
                                        <div id="sort-by">
                                            <label class="left hidden-xs" for="SortBy">Sắp xếp: </label>
                                            <div class="border_sort">
                                                <select name="SortBy" id="SortBy">
                                                    <option value="">Tùy chọn</option>
                                                    <option value="new"> Mới nhất</option>
                                                    <option value="bestseller">Bán chạy nhất</option>
                                                    <option value="priceAsc">Giá tăng dần</option>
                                                    <option value="priceDesc">Giá giảm dần</option>
                                                    <option value="nameAsc">
                                                        Tên từ A-Z
                                                    </option>
                                                    <option value="nameDesc">Tên từ Z-A</option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="clearfix"></div>
                    <section id="resultAjax" class="products-view products-view-grid collection_reponsive">
                        <div class="row">
                            @foreach (var item in Model)
                            {
                                <div class="col-xs-6 col-sm-3 col-md-3 col-lg-3 product-col">
                                    <div class="item saler_item pro-content" data-id="28750961">
                                        <div class="product-box">
                                            <div class="product-thumbnail">
                                                <span class="sale_count"> <span class="bf_"> -5% </span></span>
                                                <a rel="noindex" href="/quan-jeans-suong-cao-cap-q0102-p28750961.html" class="image_link display_flex" data-images="https://storage.googleapis.com/cdn.nhanh.vn/store/6602/ps/20210201/731908146af1da9fdfc711fe96dfcf26_thumb.jpg" title="Quần jeans suông cao cấp Q0102">
                                                    <img class="img-responsive " src="https://storage.googleapis.com/cdn.nhanh.vn/store/6602/ps/20210201/731908146af1da9fdfc711fe96dfcf26_thumb.jpg" alt="Quần jeans suông cao cấp Q0102" style="padding-top: 0px;">
                                                </a>
                                                <div class="product-action-grid clearfix">
                                                    <div class="variants ">
                                                        <a href="javascript:void(0)" data-psid="28750961" data-handle="/quan-jeans-suong-cao-cap-q0102-p28750961.html" class="button_wh_40 btn_view right-to quick-view tp_button">
                                                            <i class="fa fa-search"></i>
                                                            <span class="tooltips qv"><span>Xem nhanh</span></span>
                                                        </a>
                                                    </div>
                                                </div>
                                                <span class="hotSale">
                                                    <img src="~/Images/sale.svg">
                                                </span>
                                            </div>
                                            <div class="product-info">
                                                <h3 class="product-name">
                                                    <a rel="noindex" class="text2line tp_product_name" href="/quan-jeans-suong-cao-cap-q0102-p28750961.html" title="Quần jeans suông cao cấp Q0102">
                                                        @item.TenSP
                                                    </a>
                                                </h3>
                                                <div class="price-box clearfix">
                                                    <span class="price product-price-old tp_product_price_old">@item.Gia ₫</span>
                                                    @if (item.KhuyenMai != null)
                                                    {
                                                        <span class="price product-price tp_product_price">@item.Gia*@item.KhuyenMai ₫</span>
                                                    }
                                                </div>
                                                <div class="action__">
                                                    <button class="cart_button_style tp_button" data-psid="28750961" data-root="-2" data-handle="/quan-jeans-suong-cao-cap-q0102-p28750961.html">
                                                        <span class="fa fa-shopping-basket"></span>
                                                        Giỏ hàng
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                        <nav class="a-center">
                            <ul class="pagination clearfix">
                                @{
                                    for (var i = 0; i < Model.PageCount; ++i)
                                    {
                                        if (@ViewBag.page - 1 == @i)
                                        {
                                            <li class="active page-item" pr="@i+1">
                                                <a class="page-link" href="@Url.Action("KetQuaTimKiem", new { page = @i + 1, searchKey = ViewBag.keyword })">@(i + 1)</a>
                                            </li>
                                        }
                                        else
                                        {
                                            <li class="page-item" pr="@i+1">
                                                <a class="page-link" href="@Url.Action("KetQuaTimKiem", new { page = @i + 1, searchKey = ViewBag.keyword })">@(i + 1)</a>
                                            </li>
                                        }
                                    }
                                }
                            </ul>
                        </nav>
                    </section>
                </div>
            </section>
            @*@Html.Action("DanhMucSanPhamPartial", "Home");*@
        </div>
    </div>
</div>

