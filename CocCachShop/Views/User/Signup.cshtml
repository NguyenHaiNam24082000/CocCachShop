@model CocCachShop.Models.SignupModel
@{
    ViewBag.Title = "Đăng ký";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="page-user">
    <div class="container">
        <h1 class="title-user">Đăng ký tài khoản miễn phí</h1>
        <p class="intro-user"></p>
        <div class="social-login">
            <a href="/user/fbsignin?redirect=/" class="fb-user" rel="nofollow">With Facebook</a>
            <a href="/user/ggsignin" class="gplus-user" rel="nofollow">With Google+</a>
        </div>
        <p class="suggestions-user"></p>
        @using (Html.BeginForm("Signup", "User", FormMethod.Post, new { @id = "formAcount", @class = "validate form-register form-login" }))
        {

            @*<form id="formAcount" class="validate form-register form-login" method="POST">*@
            <div class="form-group">
                @Html.TextBoxFor(x => x.UserName, new { @type = "text", @name = "username", @id = "username", @class = "validate[required,minSize[4],maxSize[32]] form-control", @placeholder = "Tên đăng nhập" })
                @*<input type="text" name="username" id="username" class="validate[required,minSize[4],maxSize[32]] form-control" placeholder="Tên đăng nhập">*@
            </div>
            <div class="form-group">
                @Html.TextBoxFor(x => x.FullName, new { @type = "text", @name = "fullName", @id = "fullName", @class = "validate[required,minSize[4],maxSize[32]] form-control", @placeholder = "Họ tên" })
                @*<input type="text" name="fullName" id="fullName" class="validate[required,minSize[4],maxSize[32]] form-control" placeholder="Họ tên">*@
            </div>
            <div class="form-group">
                @Html.TextBoxFor(x => x.PhoneNumber, "", new { @type = "text", @name = "mobile", @id = "mobile", @class = "validate[required,custom[phone]] form-control", @placeholder = "Điện thoại" })
                @* <input type="text" name="mobile" id="mobile" class="validate[required,custom[phone]] form-control" placeholder="Điện thoại">*@
            </div>
            <div class="form-group">
                @Html.TextBoxFor(x => x.Email, "", new { @type = "email", @name = "email", @id = "email", @class = "validate[required,custom[email]] form-control", @placeholder = "Email" })
                @*  <input type="email" name="email" id="email" class="validate[required,custom[email]] form-control" placeholder="Email">*@
            </div>
            <div class="form-group">
                @Html.TextBoxFor(x => x.Password, "", new { @type = "password", @name = "password", @id = "password", @class = "validate[required,minSize[6]] form-control", @placeholder = "Mật khẩu của bạn" })
                @*<input type="password" name="password" id="password" class="validate[required,minSize[6]] form-control" placeholder="Mật khẩu của bạn">*@
            </div>
            <div class="form-group">
                @Html.TextBoxFor(x => x.ConfirmPassword, "", new { @type = "password", @name = "rePassword", @id = "rePassword", @class = "validate[required,minSize[6],equals[password]] form-control", @placeholder = "Nhập lại mật khẩu" })
                @*<input type="password" name="rePassword" id="rePassword" class="validate[required,minSize[6],equals[password]] form-control" placeholder="Nhập lại mật khẩu">*@
            </div>
            <div class="form-group">

                <button type="submit" id="btnRegister" class="btn-register text-uppercase tp_button">
                    Đăng ký
                </button>
            </div>
        }

        <div class="terms">
            <p class="text-center">Bằng cách đăng ký, bạn xác nhận rằng bạn chấp nhận</p>
            <p class="text-center">
                <a href="" target="_blank">
                    Các điều khoản và điều kiện
                </a> và
                <a href="" target="_blank">
                    Chính sách bảo mật
                </a>
            </p>
        </div>
        @*</form>*@

    </div>
</div>
